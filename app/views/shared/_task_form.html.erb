<%= form_for(@task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "タイトル" %>

    <%= f.label :start %>
    <%= f.datetime_select :start %>

    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>
  <%= f.submit "作成", class: 'btn btn-primary' %>
<% end %>