<div class="task_show">
  <h1><%= @task.title %></h1>
  <span class="time"><%= @task.start.strftime('%Y/%m/%d %H:%M') %>　〜　<%= @task.end.strftime('%Y/%m/%d %H:%M') %></span><br>
  <span class="member-title">
    参加者リスト
  </span>
  <div class="member-list-box">
    <ul class="task-member-list">
      <% unless @task.nil? %>
        <% @task.users.each do |user| %>
          <li class="task-member">
            <%= user.name %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% if @task.owner == current_user %>
    <%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary' %>
    <%= link_to "削除", task_path, method: :delete, 
                class: 'btn btn-danger',
                data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</div>