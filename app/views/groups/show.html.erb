<% provide(:title, "グループ詳細") %>
<h1><%= @group.name %></h1>

<% if is_owner?(@group) %>
  <%= link_to "編集", edit_group_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "削除", edit_group_path, class: "btn btn-lg btn-danger" %>
<% end %>

<ul>
  <% @group.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>